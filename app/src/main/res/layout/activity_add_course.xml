<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <EditText
            android:id="@+id/collegeNameAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:inputType="text"
            android:hint="院校名"
            android:maxLines="1" />

    <EditText
            android:id="@+id/courseNameAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/collegeNameAdd"
            android:layout_marginTop="16dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:inputType="text"
            android:hint="课程名"
            android:maxLines="1" />

    <EditText
            android:id="@+id/introduceAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/courseNameAdd"
            android:layout_marginTop="16dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:inputType="text"
            android:hint="课程简介"
            android:maxLines="1" />

    <EditText
            android:id="@+id/startTimeAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/introduceAdd"
            android:layout_marginTop="16dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:inputType="text"
            android:hint="()天后开始"
            android:maxLines="1" />

        <EditText
                android:id="@+id/learnTimeAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/startTimeAdd"
                android:layout_marginTop="16dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:inputType="text"
                android:hint="学习时间(天)"
                android:maxLines="1" />
        <Button
                android:id="@+id/photoBtnAdd"
            android:layout_width="160dp"
            android:layout_height="50dp"
                android:layout_below="@id/learnTimeAdd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:textSize="19sp"
                android:text="上传图片" />

        <ImageView
                android:id="@+id/photoAdd"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/learnTimeAdd"/>
    <Button
            android:id="@+id/courseBtnAdd"
            android:layout_width="160dp"
            android:textSize="19sp"
            android:layout_height="50dp"
            android:layout_below="@id/photoBtnAdd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="增加课程" />
   </RelativeLayout>

</LinearLayout>